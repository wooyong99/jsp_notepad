<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Jsp_Pratice08_Security</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  
  <!-- sercurity-role은 서버에서 사용하는 역할을 명시하는 코드이다. -->
  <security-role>
  	<!-- 반드시 role-name의 값은 tomcat-users.xml에 등록 되어있어야한다. -->
  	<role-name>role1</role-name>
  </security-role>
  
  <security-constraint>
  	<web-resource-collection>
  		<web-resource-name>Jsp_Practice08_Security</web-resource-name>
  		<url-pattern>/security01.jsp</url-pattern>
  		<http-method>GET</http-method>
  	</web-resource-collection>
  	<auth-constraint>
  		<description></description>
  		<role-name>role1</role-name>
  	</auth-constraint>
  </security-constraint>
  <!-- security-constraint 조건에 알맞은 사용자가 접근할 경우 login-config 태그가 활성화된다. -->
  <login-config>
  	<auth-method>FORM</auth-method>
  	<form-login-config>
	  	<form-login-page>/login.jsp</form-login-page>
	  	<form-error-page>/login_fail.jsp</form-error-page>
  	</form-login-config>
  </login-config>
</web-app>